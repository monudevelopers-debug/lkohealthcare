# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lucknow_healthcare
DB_USERNAME=healthcare_user
DB_PASSWORD=healthcare_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRATION=900000
JWT_REFRESH_EXPIRATION=604800000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@lucknowhealthcare.com

# Payment Gateway Configuration
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key

# Application Configuration
APP_NAME=Lucknow Nursing Healthcare Services
APP_VERSION=1.0.0
APP_ENVIRONMENT=development
APP_PORT=8080
APP_URL=http://localhost:8080

# Frontend URLs
FRONTEND_URL=http://localhost:3000
PROVIDER_DASHBOARD_URL=http://localhost:3001
ADMIN_DASHBOARD_URL=http://localhost:3002

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Redis Configuration (Optional for MVP)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/application.log

# Security Configuration
BCRYPT_ROUNDS=12
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# Notification Configuration
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_PUSH_ENABLED=false

# Business Configuration
BOOKING_ADVANCE_NOTICE_HOURS=24
CANCELLATION_WINDOW_HOURS=2
EMERGENCY_RESPONSE_TIME_MINUTES=15
