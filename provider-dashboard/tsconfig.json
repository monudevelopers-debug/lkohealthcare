{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "types": ["vitest/globals", "vite/client", "@testing-library/jest-dom"]
  },
  "include": [
    "src/main.tsx",
    "src/App.tsx",
    "src/index.css",
    "src/setupTests.ts"
  ],
  "exclude": [
    "src/pages/**",
    "src/components/**",
    "src/types/**"
  ]
}
